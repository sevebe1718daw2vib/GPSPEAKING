<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18363F"

    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/roundcorner2"
        android:src="@drawable/iconoboton"
        android:text="@string/login"
        android:textColorHighlight="#A54071"
        android:textColorLink="#7FB888" />


    <Button
        android:id="@+id/btnUsers"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/roundcorner"
        android:src="@drawable/iconoboton"
        android:text="@string/users"
        android:textColorLink="#0C21A2"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="455dp"
        android:background="@drawable/markerG" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fotoCentro"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/iconoboton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="60dp"
        android:text="@string/fotoPerfil"
        android:textColor="#4CAF50"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- <ImageButton
         android:id="@+id/ImageBoton"
         android:layout_width="204dp"
         android:layout_height="190dp"
         android:layout_alignParentTop="true"
         android:layout_marginTop="66dp"
         android:background="@drawable/button"
         android:padding="1dp"
         android:src="@drawable/iconoboton"


         />-->


</RelativeLayout>